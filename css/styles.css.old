.step:before {
    font-family: 'Open Sans Condensed', sans-serif;
    content: counter(step);
    counter-increment: step;
    position: absolute;
    left: 0;
    top: 10px;
    top: 50%;
    margin-top: -0.5em;
    font-size: 5em;
    line-height: 1em;
    opacity: 0.1;
    font-weight: bold;
    text-shadow: 0 -1px black;
    width: 1em;
    text-align: center;
    -moz-transition: opacity 0.3s ease-in-out;
}

/*
.step.open:before,
.step:hover:before {
    opacity: 0.5;
}
*/

.step:after {
    position: absolute;
    left: 1em;
    font-size: 5em;
    top: 0;
    bottom: 0;
    border-right: 1px solid rgba(255,255,255,0.2);
    border-left: 1px solid rgba(0,0,0,0.2);
    content: "";
}

.step h3 {
    color: #555;
    position: absolute;
    left: 4em;
    top: 1.33em;
    font-size: 1.5em;
    line-height: 1em;
    width: 16em;
    text-align: right;
}

.step h3:before {
    font-weight: normal;
    content: "Step " counter(step) ": ";
}

.step .more {
    overflow: hidden;
    margin-left: -25em;
    max-height: 0;
    -moz-transition: max-height 0.3s ease-in-out;
}

.step.open .more {
    max-height: 300px;
}

.step .more > *:first-child {
    padding-top: 2em;
}

