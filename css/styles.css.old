* {
    -o-box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}

html {
    overflow-y: scroll;
    padding: 0;
    margin: 0;
    height: 100%;
    width: 100%;
}

body {
    min-height: 100%;
    padding: 0;
    margin: 0;
    background: #A0A0A0;
    color: #666;
    /*background: -webkit-linear-gradient(bottom, #666, #A0A0A0);*/
    /*background:    -moz-linear-gradient(bottom, #666, #A0A0A0);*/
    /*background:     -ms-linear-gradient(bottom, #666, #A0A0A0);*/
    /*background:      -o-linear-gradient(bottom, #666, #A0A0A0);*/
    /*background:         linear-gradient(bottom, #666, #A0A0A0);*/
    font-family: 'Open Sans', sans-serif;
    font-size: .95em;
    line-height: 1.7;
}

body > * {
    width: 60em;
    padding: 0 2em;
    margin: 0 auto 2em;
    text-shadow: 0 1px rgba(255, 255, 255, 0.4);
}

header {
    background: #000;
}


a:link { color: #D00; text-decoration: none; }
a:hover { color: #F30; }
a:visited { color: #C33; }

a.button {
    display: inline-block;
    background: #D00;
    background: -webkit-linear-gradient(top, #D00, #900);
    background:    -moz-linear-gradient(top, #D00, #900);
    background:     -ms-linear-gradient(top, #D00, #900);
    background:      -o-linear-gradient(top, #D00, #900);
    background:         linear-gradient(top, #D00, #900);
    box-shadow: 0 1px 2px rgba(0,0,0,0.5);
    padding: 0 1em;
    border-radius: .75em;
    color: #FFF;
    text-shadow: 0 -1px rgba(0,0,0,0.5);
    text-decoration: none;
    opacity: 0.75;
}

a.button:hover {
    opacity: 1;
}

h1, h2, h3, h4 {
    font-family: 'Open Sans Condensed', sans-serif;
    color: #333;
    margin: 0;
    padding: 0;
}

hgroup {
}

h1 {
    /*padding: 20px 20px 0;*/
    text-align: center;
    font-size: 4em;
    margin-bottom: 0;
}

h2 {
    text-align: center;
    margin-bottom: 0;
    font-size: 2em;
    font-weight: normal;
}

#intro p {
    text-align: center;
    font-size: 1.5em;
    /*color: black;*/
}

pre,
code {
    font-family: Consolas, Monaco, monospace;
}

code {
    font-family: Consolas, Monaco, monospace;
    background: rgba(255,255,255,0.25);
    font-weight: normal;
    border-radius: 0.25em;
    padding: 0 0.25em;
    margin: 0 0.25em;
}

pre {
    padding: 20px;
    background: #FFF;
    margin-top: 20px;
    font-size: 90%;
    text-shadow: none;
    color: #999;
    box-shadow: 0px 1px 1px rgba(0,0,0,0.25);;
}


#steps {
    counter-reset: step;
    padding: 0;
}

.step {
    background: white;
    background: -webkit-linear-gradient(top, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
    background:    -moz-linear-gradient(top, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
    background:     -ms-linear-gradient(top, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
    background:      -o-linear-gradient(top, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
    background:         linear-gradient(top, rgba(255,255,255,0.5), rgba(255,255,255,0.3));
    padding: 20px 20px 20px 460px;
    padding: 2em 2em 2em 32em;
    position: relative;
    margin-bottom: 1px;
    overflow: hidden;
    box-shadow: 0 1px rgba(255,255,255,0.3) inset;
}

